generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Tool {
  id          Int        @id @default(autoincrement())
  title       String
  link        String
  description String
  tags        TagsTool[]
  created_at  DateTime   @default(now())

  @@map("tools")
}

model TagsTool {
  toolId  Int    @id @default(autoincrement())
  Tool    Tool   @relation(fields: [toolId], references: [id])
  tagName String

  @@map("tags_tool")
}
